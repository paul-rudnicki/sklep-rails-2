<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tut≈Ç</th>
      <th scope="col">Avatar</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= post.title %></td>
        <% if post.avatar.attached? %>
          <td><%= image_tag post.avatar, width: '150px' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>